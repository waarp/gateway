<!DOCTYPE html>
<html>
<head lang="{{ .Language }}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .InstanceName }} - {{ .AppName }}</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="static_v2/assets/favicon.ico" type="image/x-icon">
    <link rel="icon" href="static_v2/assets/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS and Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Base CSS -->
    <link rel="stylesheet" href="static_v2/base.css">

    <!-- Base JS -->
    <script src="static_v2/base.js"></script>
</head>
<body>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Include navbar -->
    {{ template "navbar.gohtml" .NavbarData }}

    <!-- Page layout -->
    <div class="page-layout">
        <!-- Include sidebar -->
        {{ template "sidebar.gohtml" .SidebarData }}

        <!-- Page content -->
        <main>
            {{ template "page" .PageData }}
        </main>
    </div>
</body>
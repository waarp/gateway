[Unit]
Description=Waarp Gateway server

[Service]
Type=simple
User=waarp
Group=waarp
WorkingDirectory=/var/lib/waarp-gateway
Environment=PATH=/usr/share/waarp-gateway/:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/usr/bin/waarp-gatewayd server -c /etc/waarp-gateway/gatewayd.ini
Restart=on-failure

[Install]
WantedBy=multi-user.target

